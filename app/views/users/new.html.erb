<h1>Welcome to Fake Twitter</h1>
<h3>Possibly the shittiest fake twitter experience on the web.</h3>

<%= form_for User.new do |f| %>
	<div>
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>

	<div>
	  <%= f.label :email %>
	  <%= f.text_field :email %>
	</div>

	<div>
	  <%= f.label :handle %>
	  <%= f.text_field :handle %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>

	<%= f.submit %>
<% end %>
